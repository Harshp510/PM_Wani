<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffeeeeee"
    android:clipToPadding="false">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/ll_root"
            android:padding="5dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:weightSum="1"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="0.5"
                    android:id="@+id/devicename_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/txt_sitelabel"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IP Address"
                        android:textSize="10sp"
                        style="@style/font"
                        android:textColor="@color/gray"/>
                    <TextView
                        android:id="@+id/txt_ipaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zen"
                        style="@style/font"
                        android:textSize="14sp"
                        android:textColor="@color/black_opaque_80"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MAC Address"
                        android:textSize="10sp"
                        style="@style/font"
                        android:textColor="@color/gray"/>
                    <TextView
                        android:id="@+id/txt_mac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zen"
                        style="@style/font"
                        android:textSize="14sp"
                        android:textColor="@color/black_opaque_80"
                        />
                </LinearLayout>

                <!-- <ImageView
                     android:layout_weight="0.3"
                     android:src="@drawable/ic__thumb_up"
                     android:layout_gravity="center"

                     android:id="@+id/img_onlinestatus"
                     android:layout_width="40.0dip"
                     android:layout_height="40.0dip"/>-->
            </LinearLayout>
            <View
                android:id="@+id/transaction_divider"
                android:background="@color/default_fragment_bg_color"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"/>
            <LinearLayout
                android:weightSum="1"
                android:gravity="center"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Connected Since"
                        android:textSize="10sp"
                        style="@style/font"
                        android:textColor="@color/gray"/>
                    <TextView
                        android:id="@+id/txt_connected_since"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="192.168.2.25"
                        android:textSize="14sp"
                        style="@style/font"
                        android:gravity="center_vertical"
                        android:drawablePadding="5dp"
                        android:textColor="@color/black_opaque_80"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data Usage"
                        style="@style/font"
                        android:textSize="10sp"
                        android:textColor="@color/gray"/>
                    <TextView
                        android:id="@+id/txt_DataUsage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="aa:bb:aa:bb:aa:bb"
                        style="@style/font"
                        android:textSize="14sp"
                        android:textColor="@color/black_opaque_80"
                        />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>
