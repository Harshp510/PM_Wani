<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OTP_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        app:contentInsetLeft="0.0dip"
        app:contentInsetStart="0.0dip"
        android:minHeight="?attr/actionBarSize"
        app:layout_scrollFlags="enterAlways|scroll"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_gravity="start|center"
                android:id="@+id/ivActionBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/outline_chevron_left_white_24"
                style="@style/Widget.AppCompat.ActionButton"
                app:tint="@color/mainblack" />

        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

             <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

                <TextView
                android:textSize="35dp"
                android:text="Enter Your"
                android:textStyle="bold"
                android:textColor="@color/maingreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
                <TextView

                android:textSize="35dp"
                android:text="Verification Code"
                android:textStyle="bold"
                android:textColor="@color/maingreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

                <TextView
                 android:id="@+id/txt_otp_label"
                android:textSize="16sp"
                android:textColor="@color/black_opaque_70"
                android:text="We sent Code to Phone +91 9876543210"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
        <RelativeLayout
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.chaos.view.PinView

                android:layout_centerVertical="true"
                android:id="@+id/firstPinView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:itemBackground="@drawable/bg_event_pricing_date_normal"
                android:textColor="@color/mainblack"
                android:textSize="18sp"
                android:textStyle="bold"
                app:itemCount="6"
                app:hideLineWhenFilled="true"
                app:itemHeight="60dp"
                app:itemRadius="@dimen/pv_pin_view_item_radius"
                app:itemSpacing="10dp"
                app:itemWidth="40dp"
                app:lineColor="@color/event_pricing_date_chooser_bg_normal"
                app:lineWidth="0dp" />
                <requestFocus/>
        </RelativeLayout>

        <LinearLayout
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="0.8"
                android:id="@+id/txt_timer"
                android:textSize="16sp"
                android:textColor="@color/black_opaque_70"
                android:text="text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_resend_code"
                android:layout_weight="0.2"
                android:visibility="visible"
                android:textSize="16sp"
                android:gravity="right"
                android:textColor="@color/color_states_materialbutton"
                android:text="Resend Code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/verify"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"
            android:padding="15dp"

            android:id="@+id/btn_verify"
            android:layout_alignParentBottom="true"
            android:textSize="16dp"
            android:textColor="@color/white"
            app:cornerRadius="32dp"
            app:elevation="0dp"
            app:backgroundTint="@color/maingreen"
            />
    </LinearLayout>


</RelativeLayout>


