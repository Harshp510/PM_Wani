<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appBarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_scrollFlags="scroll|enterAlways"

        android:theme="@style/Theme.PMWANI">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:fontFamily="@font/poppinsregular"
                android:gravity="center"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_title_textSize"
                tools:text="@string/title_fragment_more" />

            <!--<ImageView
                android:id="@+id/ivActionBack"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:contentDescription="@string/btn_back"
                android:src="@drawable/ic_action_arrow_back" />-->

            <ImageView
                android:id="@+id/ivActionBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_gravity="start|center_vertical"
                android:contentDescription="@string/btn_back"
                android:src="@drawable/ic_action_arrow_back"
                app:tint="@color/white" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical">

                <ImageView
                    android:id="@+id/ivActionRing"
                    style="@style/Widget.AppCompat.ActionButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/btn_back"
                    android:background="@drawable/red_border_line1"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/ivActionLogo"
                    style="@style/Widget.AppCompat.ActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/btn_back"
                    android:src="@drawable/ic_action_logo"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

        </FrameLayout>

    </androidx.appcompat.widget.Toolbar>
</com.google.android.material.appbar.AppBarLayout>