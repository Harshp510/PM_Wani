<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activeplan_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffeeeeee"
    android:clipToPadding="false">

    <TextView
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/roboto_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:includeFontPadding="false"
        android:gravity="center_vertical"
        android:letterSpacing="0.01"
        android:text="Active Plan"
        android:textColor="@color/black_opaque_80"
        android:textSize="22dp"
        />
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="20dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp">

        <LinearLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp"
                android:weightSum="1">


                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_planname"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rounded_corner_planname"
                        android:letterSpacing="0.02"
                        android:padding="3dp"
                        android:text="Booster plan"

                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />


                </LinearLayout>
                <View

                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginTop="5dp"
                    android:background="@color/default_fragment_bg_color" />

                <TextView

                    android:fontFamily="@font/roboto_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:letterSpacing="0.01"

                    android:text="Data"
                    android:includeFontPadding="false"
                    android:textColor="@color/black_opaque_70"
                    android:textSize="12dp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"

                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/txt_dataremain"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.01"
                        android:text="1.38 GB"
                        android:textColor="@color/black_opaque_80"
                        android:textSize="22dp"
                         />

                    <TextView
                        android:id="@+id/total_plandata"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/helvetica_neue_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.01"
                        android:text="left of 1.50 GB"
                        android:textColor="@color/black_opaque_70"
                        android:textSize="14dp"
                         />

                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/transaction_divider"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginTop="2dp"
                android:background="@color/default_fragment_bg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">

                        <TextView

                            android:id="@+id/plan_expire"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.01"
                            android:text="You're on 666 - 2 Days Expires on 05 july 2023"
                            android:textColor="@color/black_opaque_80"
                            android:textSize="13dp"
                            />



                    </LinearLayout>

                    <LinearLayout

                        android:paddingBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView

                            android:id="@+id/btn_buy"
                            android:fontFamily="@font/roboto"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:background="@drawable/rounded_corner"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Buy New Plan"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                          />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>