<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffeeeeee"
    android:clipToPadding="false">
    <androidx.cardview.widget.CardView

        app:cardCornerRadius="20dp"
        app:contentPadding="10dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <LinearLayout
            android:id="@+id/ll_root"
            android:padding="5dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:weightSum="1"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="3dp"
                        android:id="@+id/txt_planname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/font"
                        android:textSize="14dp"
                        android:background="@drawable/rounded_corner_planname"
                        android:layout_gravity="center_vertical"
                        android:text="Booster plan"

                        android:letterSpacing="0.02"
                        android:textColor="@color/white"
                        android:textStyle="bold" />



                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:id="@+id/txt_planamount"
                        android:layout_width="match_parent"
                        android:layout_weight="0.3"
                        android:layout_gravity="left"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="30dp"
                        style="@style/font"
                        android:letterSpacing="0.03"
                        android:textColor="@color/black_opaque_80"
                        android:textStyle="bold"
                        android:text="$200" />
                    <TextView
                        android:layout_weight="0.7"
                        android:id="@+id/txt_status"
                        android:layout_width="match_parent"
                        style="@style/font"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textSize="12dp"

                        android:textColor="@color/maingreen"
                        android:textStyle="bold"
                        android:text="View Detail" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_marginTop="5dp"
                android:id="@+id/transaction_divider"
                android:background="@color/default_fragment_bg_color"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="0.7"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <TextView
                            android:layout_marginTop="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order ID"
                            android:textStyle="bold"
                            style="@style/font"
                            android:letterSpacing="0.1"
                            android:textSize="12sp"
                            android:textColor="@color/black_opaque_70"/>
                        <TextView
                            android:layout_marginTop="2dp"
                            android:id="@+id/txt_orderid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="192.168.2.25"
                            style="@style/font"
                            android:textStyle="bold"
                            android:letterSpacing="0.05"
                            android:textSize="14dp"

                            android:textColor="@color/black_opaque_80"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment Date"
                            style="@style/font"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:textSize="12sp"
                            android:textColor="@color/black_opaque_70"/>
                        <TextView
                            android:layout_marginTop="2dp"
                            android:id="@+id/txt_paymentdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="17-05-2023 01:06:pm"
                            style="@style/font"
                            android:textStyle="bold"
                            android:letterSpacing="0.01"
                            android:textSize="14dp"

                            android:textColor="@color/black_opaque_80"
                            />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>