<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ll_main_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/purple_500"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:contentInsetLeft="0.0dip"
            app:contentInsetStart="0.0dip"
            >


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/actionbar_size_main"
                android:orientation="vertical">


                <RelativeLayout
                    android:background="@color/purple_500"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/actionbar_size_main"
                    >

                    <LinearLayout
                        android:layout_alignParentLeft="true"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        >
                        <ImageView
                            android:visibility="invisible"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:src="@mipmap/ic_qam_app_icon_circle"
                            android:layout_gravity="left|center_vertical"
                            />

                    </LinearLayout>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Dashboard"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">


                        <ImageView
                            android:id="@+id/img_settings"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_settings_white"
                            app:tint="@color/white" />




                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>




        </androidx.appcompat.widget.Toolbar>




    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_below="@+id/ll_main_header"
        android:layout_above="@+id/txt_error_notes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="#F3F2F7"
        android:weightSum="1">



        <TextView
            android:id="@+id/ll_devices_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:padding="8dp"
            android:text="Network Detail"
            android:textColor="@color/black_opaque_70"
            android:textSize="15dp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/ll_devices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F3F2F7"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="1dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginEnd="5dp"

                        android:minWidth="60dp"
                        android:orientation="vertical"

                        android:paddingStart="@dimen/event_pricing_date_chooser_time_padding_vertical"
                        android:paddingLeft="@dimen/event_pricing_date_chooser_time_padding_vertical"
                        android:paddingTop="@dimen/event_pricing_date_chooser_time_padding_vertical"
                        android:paddingRight="@dimen/event_pricing_date_chooser_time_padding_vertical">


                        <ImageView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="left"
                            android:src="@drawable/network" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/txt_tool_network_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="5dp"
                                android:gravity="bottom"
                                android:text=""
                                android:textColor="@color/black_opaque_70"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginRight="5dp"
                                android:gravity="left"
                                android:text="Network"
                                android:textColor="@color/black_opaque_70"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"

                        android:minWidth="60dp"

                        android:orientation="vertical"


                        android:paddingStart="@dimen/event_pricing_date_chooser_time_padding_vertical"
                        android:paddingLeft="@dimen/event_pricing_date_chooser_time_padding_vertical"
                        android:paddingTop="@dimen/event_pricing_date_chooser_time_padding_vertical"
                        android:paddingRight="@dimen/event_pricing_date_chooser_time_padding_vertical">


                        <ImageView


                            android:layout_width="50dp"

                            android:layout_height="50dp"
                            android:layout_gravity="left"
                            android:src="@drawable/bssid" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:paddingBottom="10dp">

                            <TextView

                                android:id="@+id/txt_tool_bssid_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="5dp"
                                android:gravity="bottom"
                                android:text=""
                                android:textColor="@color/black_opaque_70"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginRight="5dp"
                                android:gravity="left"
                                android:text="BSSID"
                                android:textColor="@color/black_opaque_70"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="1dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:minWidth="60dp"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/event_pricing_date_chooser_time_padding_vertical"
                        android:paddingLeft="@dimen/event_pricing_date_chooser_time_padding_vertical"
                        android:paddingTop="@dimen/event_pricing_date_chooser_time_padding_vertical"
                        android:paddingRight="@dimen/event_pricing_date_chooser_time_padding_vertical">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="left"
                            android:src="@drawable/strength" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/txt_tool_strength_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="5dp"
                                android:gravity="bottom"
                                android:text=""
                                android:textColor="@color/black_opaque_70"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginRight="5dp"
                                android:gravity="left"
                                android:text="Strength"
                                android:textColor="@color/black_opaque_70"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:minWidth="60dp"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/event_pricing_date_chooser_time_padding_vertical"
                        android:paddingLeft="@dimen/event_pricing_date_chooser_time_padding_vertical"
                        android:paddingTop="@dimen/event_pricing_date_chooser_time_padding_vertical"
                        android:paddingRight="@dimen/event_pricing_date_chooser_time_padding_vertical">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="left"
                            android:src="@drawable/ip_address" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:paddingBottom="10dp">

                            <TextView

                                android:id="@+id/txt_tool_ip_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="5dp"
                                android:gravity="bottom"
                                android:text=""
                                android:textColor="@color/black_opaque_70"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginRight="5dp"
                                android:gravity="left"
                                android:text="IP Address"
                                android:textColor="@color/black_opaque_70"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>





        </LinearLayout>







    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_above="@+id/txt_error_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            
            android:gravity="center"
            android:textSize="16dp"
            android:text="Your wifi setting is disabled. Please enable wifi"
            android:textColor="@color/black_opaque_70"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/qam_button_back_wifi_connect"
            android:text="Wi-Fi Settings"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="normal" />
    </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_error_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:alpha="0.7"
        android:background="@color/white"
        android:gravity="center"
        android:padding="15dp"
        android:text="Note:If you want to show wifi network detail then enable location and wifi sevice in setting menu in your device."
        android:textColor="@color/wifired"
        android:textSize="12sp"
        android:textStyle="normal"
        android:visibility="visible" />

</RelativeLayout>